{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-no-bind": false,
    "jsx-no-lambda": false,
    "jsx-boolean-value": [true, "never"],
    "member-ordering": false,
    "no-console": false,
    "object-literal-sort-keys": false
  }
}
